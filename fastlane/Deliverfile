# Deliverfile - Fastlane deliver configuration

# App Store Connect API Key (no password/2FA needed)
api_key_path("./fastlane/api_key.json")

# App metadata
app_identifier("dev.dreamfold.TetraTrack")

# Upload screenshots
skip_screenshots(false)
overwrite_screenshots(true)
screenshots_path("./fastlane/screenshots")

# Skip binary upload (we use xcodebuild for that)
skip_binary_upload(true)

# Skip app version update (managed via xcodebuild)
skip_app_version_update(true)

# Don't automatically submit for review
submit_for_review(false)

# Force overwrite remote metadata
force(true)

# Metadata path
metadata_path("./fastlane/metadata")

# App rating configuration
app_rating_config_path("./fastlane/rating_config.json")

# Copyright
copyright("2026 Darryl Cauldwell")

# Categories
primary_category("HEALTH_AND_FITNESS")
secondary_category("SPORTS")

# App icon (1024x1024 PNG without alpha for App Store listing)
app_icon("./TetraTrack/Assets.xcassets/AppIcon.appiconset/tet1.png")

# Precheck - disable before first submission (no live version to compare)
run_precheck_before_submit(false)
