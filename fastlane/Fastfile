# Fastfile for TetraTrack

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Load API key for App Store Connect
    api_key = app_store_connect_api_key(
      key_id: "2QUU3J6S3D",
      issuer_id: "39bba98a-c143-49fe-ab48-839ff38b4edd",
      key_filepath: "fastlane/AuthKey_2QUU3J6S3D.p8"
    )

    # Sync provisioning profiles
    sigh(
      api_key: api_key,
      app_identifier: "dev.dreamfold.TetraTrack",
      force: true
    )
    sigh(
      api_key: api_key,
      app_identifier: "dev.dreamfold.TetraTrack.watchkitapp",
      force: true
    )
    sigh(
      api_key: api_key,
      app_identifier: "dev.dreamfold.TetraTrack.WidgetExtension",
      force: true
    )

    # Increment build number
    increment_build_number(
      xcodeproj: "TetraTrack.xcodeproj"
    )

    # Build the app
    build_app(
      scheme: "TetraTrack",
      export_method: "app-store",
      project: "TetraTrack.xcodeproj",
      destination: "generic/platform=iOS",
      export_options: {
        signingStyle: "automatic",
        teamID: "N6BK2WX94Z"
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end

  desc "Build and archive without uploading"
  lane :build do
    build_app(
      scheme: "TetraTrack",
      export_method: "app-store",
      project: "TetraTrack.xcodeproj",
      destination: "generic/platform=iOS"
    )
  end
end
